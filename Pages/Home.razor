@page "/"
@using Linktree.Components.LinkCard
@using Linktree.Models

<div class="linktree-container">
    <div class="text-center profile-container">
        <img src="/img/profile.jpg" class="profile-picture" alt="Foto de Perfil de Jéssica Cechin" />
        <div class="status-badge">
            ✨Disponível
        </div>
    </div>
    <h2 class="text-center mt-3">Jéssica Cechin</h2>


    <div class="mt-3 info-section">
        <p>🧘🏻‍♀️ Instrutora de Yoga</p>
        <p>👩🏻‍💻 Desenvolvedora de Software</p>
    </div>

    <div class="mt-3 description text-center">
        <p>Transformando ideias em código e conectando corpo e mente através da yoga. Vamos criar algo incrível
            juntos!🚀</p>
    </div>

    <div class="links-section">
        @foreach (var link in links)
        {
            <LinkCard Link="link" />
        }
    </div>

    <div class="social-connect-card">
        <h3 class="social-title">Conecte-se comigo</h3>
        <div class="social-icons">
            <a href="https://www.instagram.com/jessica.cechin/" target="_blank" rel="noopener noreferrer"
                aria-label="Instagram">
                <i class="bi bi-instagram"></i>
            </a>
            <a href="https://www.linkedin.com/in/jessicacechin/" target="_blank" rel="noopener noreferrer"
                aria-label="LinkedIn">
                <i class="bi bi-linkedin"></i>
            </a>
            <a href="https://github.com/cechinjessica" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                <i class="bi bi-github"></i>
            </a>
            <a href="https://www.youtube.com/@@jessica.cechin" target="_blank" rel="noopener noreferrer"
                aria-label="YouTube">
                <i class="bi bi-youtube"></i>
            </a>
        </div>
    </div>

    <footer class="footer">
        <p>© @DateTime.Now.Year <a href="https://jessicacechin.com" target="_blank" rel="noopener noreferrer">Jéssica
                Cechin</a>. Todos os direitos reservados.</p>
        <p>Feito com 💜 e muito código</p>
    </footer>
</div>

